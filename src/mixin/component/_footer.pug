mixin Footer(item)
  .c-footer
    .c-footer__wrap
      .c-footer__content
        a.c-footer__link(href="##") 
          i.c-footer__item.fa-brands.fa-instagram.u-fz-50
          p.c-footer__item.u-text-sm.u-font-en #{item.name}
      .c-footer__content 
        p.c-footer__item.u-text-lg.u-font-en.u-fw-800 Email 
        p.c-footer__item.u-text-sm.u-font-en #{item.email}
      .c-footer__content 
        a.c-footer__link(href="https://codepen.io/CJIE_L") 
          i.c-footer__item.fa-brands.fa-codepen.u-fz-50